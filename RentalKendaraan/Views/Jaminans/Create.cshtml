@model RentalKendaraan.Models.Jaminan

@{
    ViewData["Title"] = "Create";
}


<p class="customer__create">
    <span><i class="fas fa-home"></i></span>
    <a asp-action="Index" class="home__customer">Guarantee Data</a> > Create Data 
</p>

<hr />

<div class="row mb-3">
    <div class="col-md-8">
        <div class="card create__card">
          <h5 class="card-header create__header">Create Data Guarantee</h5>
          <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="IdJaminan" class="control-label">Id Jaminan</label>
                        <input asp-for="IdJaminan" class="form-control" />
                        <span asp-validation-for="IdJaminan" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="NamaJaminan" class="control-label">Nama Jaminan</label>
                        <input asp-for="NamaJaminan" class="form-control" />
                        <span asp-validation-for="NamaJaminan" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row justify-content-between">
                    <div class="form-group col-md-6">
                        <input type="submit" value="Create" class="btn btn-primary btn-block" />
                    </div>
                    <div class="form-group col-md-6">
                        <a asp-action="Index" class="btn btn-outline-success btn-block"><i class="fas fa-list"></i> Back to List</a>
                    </div>
                </div>
            </form>
          </div>
        </div>    
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
