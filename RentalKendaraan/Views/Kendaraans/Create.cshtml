@model RentalKendaraan.Models.Kendaraan

@{
    ViewData["Title"] = "Create";
}

<p class="customer__create">
    <span><i class="fas fa-home"></i></span>
    <a asp-action="Index" class="home__customer">Vehicles Data</a> > Create Data 
</p>

<hr />

<div class="row mb-3">
    <div class="col-md-8">
        <div class="card create__card">
          <h5 class="card-header create__header">Create Data Employee</h5>
          <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="IdKendaraan" class="control-label">Id Kendaraan</label>
                        <input asp-for="IdKendaraan" class="form-control" />
                        <span asp-validation-for="IdKendaraan" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="NamaKendaraan" class="control-label">Nama Kendaraan</label>
                        <input asp-for="NamaKendaraan" class="form-control" />
                        <span asp-validation-for="NamaKendaraan" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="NoPolisi" class="control-label">No Polisi</label>
                        <input asp-for="NoPolisi" class="form-control" />
                        <span asp-validation-for="NoPolisi" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="NoStnk" class="control-label">No STNK</label>
                        <input asp-for="NoStnk" class="form-control" />
                        <span asp-validation-for="NoStnk" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                     <div class="form-group col-md-6">
                        <label asp-for="IdJenisKendaraan" class="control-label">Jenis Kendaraan</label>
                        <select asp-for="IdJenisKendaraan" class ="form-control" asp-items="ViewBag.IdJenisKendaraan"></select>
                        <span asp-validation-for="IdJenisKendaraan" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Ketersediaan" class="control-label">Ketersediaan</label>
                        <input asp-for="Ketersediaan" class="form-control" />
                        <span asp-validation-for="Ketersediaan" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row justify-content-between">
                    <div class="form-group col-md-6">
                        <input type="submit" value="Create" class="btn btn-primary btn-block" />
                    </div>
                    <div class="form-group col-md-6">
                        <a asp-action="Index" class="btn btn-outline-success btn-block"><i class="fas fa-list"></i> Back to List</a>
                    </div>
                </div>
            </form>
          </div>
        </div>    
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
