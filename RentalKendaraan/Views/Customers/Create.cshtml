@model RentalKendaraan.Models.Customer

@{
    ViewData["Title"] = "Create Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="customer__create">
    <span><i class="fas fa-home"></i></span>
    <a asp-action="Index" class="home__customer">Customers Data</a> > Create Data 
</p>

<hr />

<div class="row mb-3">
    <div class="col-md-8">
        <div class="card create__card">
          <h5 class="card-header create__header">Create Data Employee</h5>
          <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="NamaCustomer" class="control-label">Nama Customer</label>
                        <input asp-for="NamaCustomer" class="form-control" />
                        <span asp-validation-for="NamaCustomer" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Nik" class="control-label">NIK</label>
                        <input asp-for="Nik" class="form-control" />
                        <span asp-validation-for="Nik" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Alamat" class="control-label">Alamat</label>
                        <input asp-for="Alamat" class="form-control" />
                        <span asp-validation-for="Alamat" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="NoHp" class="control-label">No.Hp</label>
                        <input asp-for="NoHp" class="form-control" />
                        <span asp-validation-for="NoHp" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                     <div class="form-group col-md-6">
                        <label asp-for="IdCustomer" class="control-label">Id Customer</label>
                        <input asp-for="IdCustomer" class="form-control" />
                        <span asp-validation-for="IdCustomer" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="IdGender" class="control-label">Gender</label>
                        <select asp-for="IdGender" class="form-control" asp-items="ViewBag.IdGender"></select>
                        <span asp-validation-for="IdGender" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row justify-content-between">
                    <div class="form-group col-md-6">
                        <input type="submit" value="Create" class="btn btn-primary btn-block" />
                    </div>
                    <div class="form-group col-md-6">
                        <a asp-action="Index" class="btn btn-outline-success btn-block"><i class="fas fa-list"></i> Back to List</a>
                    </div>
                </div>
            </form>
          </div>
        </div>    
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
