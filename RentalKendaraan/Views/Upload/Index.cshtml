@{
    ViewData["Title"] = "Upload File";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 gender__data">
    <h3 class="h4 title pb-2 mb-3"><i class="fas fa-upload"></i> &nbsp; Upload Your Files</h3>

    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="Files" class="btn btn-sm btn-outline-dark text-decoration-none">
                <span>View uploaded data</span>
                <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>

<main class="mt-3">
    <form asp-controller="Upload" asp-action="UploadFile" method="post" enctype="multipart/form-data">
        <div class="input-group mb-3">
            <input type="file" name="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
            <button class="btn btn-outline-secondary" type="submit" id="inputGroupFileAddon04">Upload File</button>
        </div>
    </form>

    <form asp-controller="Upload" asp-action="UploadFiles" method="post" enctype="multipart/form-data">
        <div class="input-group mb-3">
            <input type="file" name="files" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
            <button class="btn btn-outline-secondary" type="submit" id="inputGroupFileAddon04">Upload Files</button>
        </div>
    </form>

    <form asp-controller="Upload" asp-action="UploadFileViaModel" method="post" enctype="multipart/form-data">
        <div class="input-group mb-3">
            <input type="file" name="FileToUpload" multiple class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
            <button class="btn btn-outline-secondary" type="submit" id="inputGroupFileAddon04">Upload Files (model)</button>
        </div>
    </form>
</main>
