@model RentalKendaraan.Models.Pengembalian

@{
    ViewData["Title"] = "Create";
}

<p class="customer__create">
    <span><i class="fas fa-home"></i></span>
    <a asp-action="Index" class="home__customer">Vehicle Returns Data</a> > Create Data 
</p>

<hr />

<div class="row mb-3">
    <div class="col-md-8">
        <div class="card create__card">
          <h5 class="card-header create__header">Create Data Vehicle Return</h5>
          <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="IdPengembalian" class="control-label">Id Pengembalian</label>
                        <input asp-for="IdPengembalian" class="form-control" />
                        <span asp-validation-for="IdPengembalian" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="TglPengembalian" class="control-label">Tanggal Pengembalian</label>
                        <input asp-for="TglPengembalian" class="form-control" />
                        <span asp-validation-for="TglPengembalian" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="IdPeminjaman" class="control-label">Peminjaman</label>
                        <select asp-for="IdPeminjaman" class ="form-control" asp-items="ViewBag.IdPeminjaman"></select>
                        <span asp-validation-for="IdPeminjaman" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="IdKondisi" class="control-label">Nama Kondisi</label>
                        <select asp-for="IdKondisi" class ="form-control" asp-items="ViewBag.IdKondisi"></select>
                        <span asp-validation-for="IdKondisi" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                     <div class="form-group col-md-6">
                        <label asp-for="Denda" class="control-label"></label>
                        <input asp-for="Denda" class="form-control" />
                        <span asp-validation-for="Denda" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row justify-content-between">
                    <div class="form-group col-md-6">
                        <input type="submit" value="Create" class="btn btn-primary btn-block" />
                    </div>
                    <div class="form-group col-md-6">
                        <a asp-action="Index" class="btn btn-outline-success btn-block"><i class="fas fa-list"></i> Back to List</a>
                    </div>
                </div>
            </form>
          </div>
        </div>    
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
