@model IEnumerable<RentalKendaraan.Models.Pengembalian>

@{
    ViewData["Title"] = "Vehicle Returns";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 vhcreturns__data">
    <h3 class="h4 title"><i class="bi__icon fas fa-reply"></i> &nbsp; Vehicle Returns Data</h3>

    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="Create" class="btn btn-sm btn-outline-dark text-decoration-none">
                <i class="fas fa-plus-circle"></i>
                <span>Create new data</span>
            </a>
        </div>
    </div>
</div>

<form class="d-flex justify-content-end mb-3 align-items-center" asp-action="Index" asp-controller="Pengembalians" method="get">
    <div class="ml-3 mr-3">
        Filter by Vehicle Condition: @Html.DropDownList("kondisikendaraan", "Choose vehicle condition...")
    </div>
    <button class="btn btn-outline-primary" type="submit"><i class="fas fa-filter"></i></button>
</form>

<div class="table__customers">
    <table class="table table-striped table-hover table-responsive-lg" id="table_data">
        <thead class="table__head">
            <tr>
                <th>
                    @Html.DisplayName("Tanggal Pengembalian")
                </th>
                <th>
                    @Html.DisplayName("Denda")
                </th>
                <th>
                    @Html.DisplayName("Kondisi Kendaraan")
                </th>
                <th>
                    @Html.DisplayName("Peminjaman")
                </th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody class="table_body">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TglPengembalian)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Denda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdKondisiNavigation.NamaKondisi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPeminjamanNavigation.IdPeminjaman)
                    </td>
                    <td>
                        <div class="btn-group">
                            <a asp-area="@item.TglPengembalian" asp-action="Details" asp-route-id="@item.IdPengembalian" class="btn btn-sm btn-success" title="Detail" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-info-circle"></i></a>
                            <a asp-area="@item.TglPengembalian" asp-action="Edit" asp-route-id="@item.IdPengembalian" class="btn btn-sm btn-info" title="Edit" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-edit"></i></a>
                            <a asp-area="@item.TglPengembalian" asp-action="Delete" asp-route-id="@item.IdPengembalian" class="btn btn-sm btn-danger" title="Delete" data-toggle="tooltip" data-placement="bottom"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
