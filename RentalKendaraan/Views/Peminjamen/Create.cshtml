@model RentalKendaraan.Models.Peminjaman

@{
    ViewData["Title"] = "Create";
}

<p class="customer__create">
    <span><i class="fas fa-home"></i></span>
    <a asp-action="Index" class="home__customer">Vehicle Loans Data</a> > Create Data 
</p>

<hr />

<div class="row mb-3">
    <div class="col-md-8">
        <div class="card create__card">
          <h5 class="card-header create__header">Create Data Vehicle Loan</h5>
          <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="IdPeminjaman" class="control-label">Id Peminjaman</label>
                        <input asp-for="IdPeminjaman" class="form-control" />
                        <span asp-validation-for="IdPeminjaman" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="TglPeminjaman" class="control-label">Tanggal Peminjaman</label>
                        <input asp-for="TglPeminjaman" class="form-control" />
                        <span asp-validation-for="TglPeminjaman" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="IdKendaraan" class="control-label">Nama Kendaraan</label>
                        <select asp-for="IdKendaraan" class ="form-control" asp-items="ViewBag.IdKendaraan"></select>
                        <span asp-validation-for="IdKendaraan" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="IdCustomer" class="control-label">Nama Customer</label>
                        <select asp-for="IdCustomer" class ="form-control" asp-items="ViewBag.IdCustomer"></select>
                        <span asp-validation-for="IdCustomer" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                     <div class="form-group col-md-6">
                        <label asp-for="IdJaminan" class="control-label">Nama Jaminan</label>
                        <select asp-for="IdJaminan" class ="form-control" asp-items="ViewBag.IdJaminan"></select>
                        <span asp-validation-for="IdJaminan" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Biaya" class="control-label">Biaya</label>
                        <input asp-for="Biaya" class="form-control" />
                        <span asp-validation-for="Biaya" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row justify-content-between">
                    <div class="form-group col-md-6">
                        <input type="submit" value="Create" class="btn btn-primary btn-block" />
                    </div>
                    <div class="form-group col-md-6">
                        <a asp-action="Index" class="btn btn-outline-success btn-block"><i class="fas fa-list"></i> Back to List</a>
                    </div>
                </div>
            </form>
          </div>
        </div>    
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
